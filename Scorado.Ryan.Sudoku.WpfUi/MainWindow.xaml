<Window x:Class="Scorado.Ryan.Sudoku.WpfUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scorado.Ryan.Sudoku.WpfUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <UniformGrid Columns="2">
                <Label Content="X position in grid"></Label>
                <TextBox x:Name="xPosition"></TextBox>
            </UniformGrid>
            <UniformGrid Columns="2">
                <Label Content="Y position in grid"></Label>
                <TextBox x:Name="yPosition"></TextBox>
            </UniformGrid>
            <UniformGrid Columns="2">
                <Label Content="Puzzle value of cell"></Label>
                <TextBox x:Name="puzzleValue"></TextBox>
            </UniformGrid> 
            <Button x:Name="get" Content="Set" Click="Button_Click"></Button>
            <Label x:Name="setResult"></Label>
            <DataGrid x:Name="grid"/>
            <Button x:Name="set" Content="Get" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
